    <Grid Width="1280" Height="800" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="VideoViewGrid" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
