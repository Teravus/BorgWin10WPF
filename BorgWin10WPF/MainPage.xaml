                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="txtGenericTextMessage"  Text="An error occurred while playing the game." Grid.Column="0" Grid.Row="0" Foreground="Orange" FontWeight="Bold" FontSize="16" Width="500" TextWrapping="Wrap" />
                        <TextBlock x:Name="txtGenericErrorText" HorizontalAlignment="Center" Text="The game video wasn't found.  Please check the github readme for how to prepare the original game media." Grid.Column="0" Grid.Row="1" Foreground="Red" FontWeight="Bold" FontSize="16" Width="500" TextWrapping="Wrap" Margin="50,0" />


                        <Button Content="OK" x:Name="btnGenericcErrorOKCancel" Grid.Row="3" Grid.Column="0" Margin="0,0,0,0" Background="DarkRed" Foreground="Orange" HorizontalAlignment="Center" Width="80" Height="25">
